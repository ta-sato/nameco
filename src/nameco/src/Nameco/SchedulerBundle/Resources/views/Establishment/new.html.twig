{% extends "NamecoUserBundle:Admin:layout.html.twig" %}

{% form_theme form 'NamecoUserBundle:Form:fields.html.twig' %}	

{% block admin_contents %}
<p>施設{% block actionname %}登録{% endblock %}</p>
{{ form_errors(form) }}
<form action="{% block actionpath %}{{ path('admin_establishment_new') }}{% endblock %}" method="post" {{ form_enctype(form) }} class="form-horizontal">
	<div class="control-group {% if form.name.vars.errors|length %} error {% endif %}">
		<label class="control-label">施設名</label>
		<div class="controls">
			{{ form_widget(form.name, {'attr': {'class': 'span3'}}) }}
			{{ form_errors(form.name) }}
		</div>
	</div>
	<div class="control-group {% if form.area.vars.errors|length %} error {% endif %}">
		<label class="control-label">エリア</label>
		<div class="controls">
			{{ form_widget(form.area) }}
			{{ form_errors(form.area) }}
		</div>
	</div>
	{{ form_rest(form) }}
	<div class="btn-toolbar text-center">
		<div class="btn-group">
			<button class="btn btn-primary" type="submit">保存</button>
		</div>
	</div>
</form>
{% endblock %}

